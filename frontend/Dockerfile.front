# Step 1: Use an Nginx base image
FROM nginx:latest

# Step 2: Copy all frontend files (HTML, JS, CSS) into the Nginx HTML directory
COPY . /usr/share/nginx/html

# Step 3: Replace default Nginx configuration with our custom one
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Step 4: Expose Nginx default port
EXPOSE 80

# Step 5: Start Nginx server
CMD ["nginx", "-g", "daemon off;"]
