# ---------- Dockerfile ----------
# 1️⃣ Base image
FROM python:3.10-slim

# 2️⃣ Set working directory
WORKDIR /app

# 3️⃣ Copy all project files
COPY . .

# 4️⃣ Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# 5️⃣ Expose Flask port
EXPOSE 5000

# 6️⃣ Start the Flask app
CMD ["python", "app.py"]
